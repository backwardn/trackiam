{
  "Arn": "arn:aws:iam::aws:policy/aws-service-role/AWSServiceRoleForImageBuilder",
  "CreateDate": "2019-11-29T22:02:13Z",
  "DefaultVersionId": "v6",
  "IsAttachable": true,
  "Path": "/aws-service-role/",
  "PolicyId": "ANPAZKAPJZG4NE22WISEW",
  "PolicyName": "AWSServiceRoleForImageBuilder",
  "PolicyVersion": {
    "CreateDate": "2020-04-16T19:45:25Z",
    "Document": {
      "Statement": [
        {
          "Action": "ec2:RunInstances",
          "Condition": {
            "ArnLike": {
              "ec2:LaunchTemplate": "arn:aws:ec2:*:*:launch-template/*"
            }
          },
          "Effect": "Allow",
          "Resource": "*"
        },
        {
          "Action": "iam:CreateServiceLinkedRole",
          "Condition": {
            "StringEquals": {
              "iam:AWSServiceName": "autoscaling.amazonaws.com"
            }
          },
          "Effect": "Allow",
          "Resource": "*"
        },
        {
          "Action": "iam:PassRole",
          "Condition": {
            "StringEquals": {
              "iam:PassedToService": "ec2.amazonaws.com"
            }
          },
          "Effect": "Allow",
          "Resource": "*"
        },
        {
          "Action": [
            "autoscaling:CreateAutoScalingGroup"
          ],
          "Condition": {
            "ForAnyValue:StringEquals": {
              "aws:RequestTag/CreatedBy": "EC2 Image Builder"
            }
          },
          "Effect": "Allow",
          "Resource": "*"
        },
        {
          "Action": [
            "autoscaling:DeleteAutoScalingGroup",
            "autoscaling:DetachInstances"
          ],
          "Condition": {
            "ForAnyValue:StringEquals": {
              "autoscaling:ResourceTag/CreatedBy": "EC2 Image Builder"
            }
          },
          "Effect": "Allow",
          "Resource": "*"
        },
        {
          "Action": [
            "ec2:CreateTags"
          ],
          "Condition": {
            "ForAnyValue:StringEquals": {
              "aws:RequestTag/CreatedBy": "EC2 Image Builder"
            }
          },
          "Effect": "Allow",
          "Resource": "*"
        },
        {
          "Action": [
            "ec2:DeleteLaunchTemplate",
            "ec2:StopInstances",
            "ec2:TerminateInstances"
          ],
          "Condition": {
            "ForAnyValue:StringEquals": {
              "ec2:ResourceTag/CreatedBy": "EC2 Image Builder"
            }
          },
          "Effect": "Allow",
          "Resource": "*"
        },
        {
          "Action": [
            "ssm:SendCommand"
          ],
          "Condition": {
            "ForAnyValue:StringEquals": {
              "ssm:resourceTag/CreatedBy": [
                "EC2 Image Builder"
              ]
            }
          },
          "Effect": "Allow",
          "Resource": [
            "arn:aws:ec2:*:*:instance/*"
          ]
        },
        {
          "Action": "ssm:SendCommand",
          "Effect": "Allow",
          "Resource": [
            "arn:aws:s3:::*",
            "arn:aws:ssm:*:*:document/AWS-RunPowerShellScript",
            "arn:aws:ssm:*:*:document/AWS-RunShellScript",
            "arn:aws:ssm:*:*:document/AWSEC2-RunSysprep"
          ]
        },
        {
          "Action": "ssm:StartAutomationExecution",
          "Effect": "Allow",
          "Resource": "arn:aws:ssm:*:*:automation-definition/ImageBuilder*"
        },
        {
          "Action": [
            "autoscaling:DescribeAutoScalingGroups",
            "autoscaling:DescribeAutoScalingInstances",
            "autoscaling:SuspendProcesses"
          ],
          "Effect": "Allow",
          "Resource": "*"
        },
        {
          "Action": [
            "ec2:CopyImage",
            "ec2:CreateImage",
            "ec2:CreateLaunchTemplate",
            "ec2:DeregisterImage",
            "ec2:DescribeImages",
            "ec2:DescribeInstanceAttribute",
            "ec2:DescribeInstanceStatus",
            "ec2:DescribeInstances",
            "ec2:DescribeSubnets",
            "ec2:DescribeTags",
            "ec2:ModifyImageAttribute"
          ],
          "Effect": "Allow",
          "Resource": "*"
        },
        {
          "Action": [
            "ec2:CreateTags"
          ],
          "Effect": "Allow",
          "Resource": "arn:aws:ec2:*::image/*"
        },
        {
          "Action": [
            "license-manager:UpdateLicenseSpecificationsForResource"
          ],
          "Effect": "Allow",
          "Resource": "*"
        },
        {
          "Action": [
            "sns:Publish"
          ],
          "Effect": "Allow",
          "Resource": "*"
        },
        {
          "Action": [
            "ssm:AddTagsToResource",
            "ssm:DescribeInstanceAssociationsStatus",
            "ssm:DescribeInstanceInformation",
            "ssm:GetAutomationExecution",
            "ssm:ListCommandInvocations",
            "ssm:ListCommands",
            "ssm:ListInventoryEntries",
            "ssm:SendAutomationSignal",
            "ssm:StopAutomationExecution"
          ],
          "Effect": "Allow",
          "Resource": "*"
        },
        {
          "Action": [
            "ssm:CreateAssociation",
            "ssm:DeleteAssociation"
          ],
          "Effect": "Allow",
          "Resource": [
            "arn:aws:ec2:*:*:instance/*",
            "arn:aws:ssm:*:*:association/*",
            "arn:aws:ssm:*:*:document/AWS-GatherSoftwareInventory"
          ]
        }
      ],
      "Version": "2012-10-17"
    },
    "IsDefaultVersion": true,
    "VersionId": "v6"
  },
  "UpdateDate": "2020-04-16T19:45:25Z"
}
