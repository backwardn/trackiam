{
  "Arn": "arn:aws:iam::aws:policy/aws-service-role/AmazonSSMServiceRolePolicy",
  "CreateDate": "2017-11-13T19:20:08Z",
  "DefaultVersionId": "v5",
  "IsAttachable": true,
  "Path": "/aws-service-role/",
  "PolicyId": "ANPAIXJ26NUGBA3TCV7EC",
  "PolicyName": "AmazonSSMServiceRolePolicy",
  "PolicyVersion": {
    "CreateDate": "2020-01-22T21:46:17Z",
    "Document": {
      "Statement": [
        {
          "Action": "iam:PassRole",
          "Condition": {
            "StringEquals": {
              "iam:PassedToService": [
                "ssm.amazonaws.com"
              ]
            }
          },
          "Effect": "Allow",
          "Resource": "*"
        },
        {
          "Action": [
            "cloudformation:DescribeStacks"
          ],
          "Effect": "Allow",
          "Resource": [
            "*"
          ]
        },
        {
          "Action": [
            "config:SelectResourceConfig"
          ],
          "Effect": "Allow",
          "Resource": [
            "*"
          ]
        },
        {
          "Action": [
            "ec2:DescribeInstanceAttribute",
            "ec2:DescribeInstanceStatus",
            "ec2:DescribeInstances"
          ],
          "Effect": "Allow",
          "Resource": [
            "*"
          ]
        },
        {
          "Action": [
            "lambda:InvokeFunction"
          ],
          "Effect": "Allow",
          "Resource": [
            "arn:aws:lambda:*:*:function:*:SSM*",
            "arn:aws:lambda:*:*:function:SSM*"
          ]
        },
        {
          "Action": [
            "resource-groups:GetGroupQuery",
            "resource-groups:ListGroupResources",
            "resource-groups:ListGroups"
          ],
          "Effect": "Allow",
          "Resource": [
            "*"
          ]
        },
        {
          "Action": [
            "ssm:CancelCommand",
            "ssm:GetAutomationExecution",
            "ssm:GetCommandInvocation",
            "ssm:GetParameters",
            "ssm:ListCommandInvocations",
            "ssm:ListCommands",
            "ssm:ListTagsForResource",
            "ssm:SendCommand",
            "ssm:StartAutomationExecution"
          ],
          "Effect": "Allow",
          "Resource": [
            "*"
          ]
        },
        {
          "Action": [
            "states:DescribeExecution",
            "states:StartExecution"
          ],
          "Effect": "Allow",
          "Resource": [
            "arn:aws:states:*:*:execution:SSM*",
            "arn:aws:states:*:*:stateMachine:SSM*"
          ]
        },
        {
          "Action": [
            "tag:GetResources"
          ],
          "Effect": "Allow",
          "Resource": [
            "*"
          ]
        }
      ],
      "Version": "2012-10-17"
    },
    "IsDefaultVersion": true,
    "VersionId": "v5"
  },
  "UpdateDate": "2020-01-22T21:46:17Z"
}
